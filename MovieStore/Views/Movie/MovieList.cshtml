@model MovieStore.Models.DTO.MovieListVM
<div class="tbl-container">
    <h2>Genres</h2>

    <table>
        <tr>
            <th>Title</th>
            <th>Genres</th>
            <th>Release Year</th>
            <th>Image</th>
            <th>Cast</th>
            <th>Director</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model.MovieList){
        <tr>
            <td>@item.Title</td>
            <td>@item.Genres</td>
                <td>@item.Releaseyear</td>
                <td><img style="height:60px;width:80px;" src="/Uploads/@item.MovieImage" /></td>
                <td>@item.Cast</td>
                <td>@item.Director</td>
                
            <td>
                <a href="/Movie/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                <a href="/Movie/Delete?id=@item.Id" onclick="return window.confirm('Are you sure?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
    </table>
    <div class="input-container">
        <a asp-controller="Movie" asp-action="Add" class="btn btn-sec">Back</a>
    </div>
</div>